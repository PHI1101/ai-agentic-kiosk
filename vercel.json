{
  "version": 2,
  "builds": [
    {
      "src": "frontend/app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/process-command.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/process-command",
      "dest": "api/process-command.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/app/build/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/frontend/app/build/static/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/frontend/app/build/favicon.ico"
    },
    {
      "source": "/manifest.json",
      "destination": "/frontend/app/build/manifest.json"
    },
    {
      "source": "/logo192.png",
      "destination": "/frontend/app/build/logo192.png"
    },
    {
      "source": "/logo512.png",
      "destination": "/frontend/app/build/logo512.png"
    }
  ]
}
